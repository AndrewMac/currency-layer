{% import "_includes/forms" as forms %}

{% set currencies = craft.currencyLayer.getCurrency() %}
{% set options = [] %}
{% for key, currency in currencies %}
{% set options = options|merge([{
	value: key, label: currency
}]) %}
{% endfor %}

{{ forms.selectField({
    options: options,
    id: name,
    name: name,
    value: value})
}}
